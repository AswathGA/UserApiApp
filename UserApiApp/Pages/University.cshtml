@page
@model UserApiApp.Pages.UniversityModel
@{
    ViewData["Title"] = "Lectures";
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #E6E6FA; /* Light purple background for body */
        margin: 0;
        padding: 0;
    }

    h1 {
        text-align: center;
        margin: 20px 0;
        color: #fff;
        background-color: #800080; /* Dark purple header */
        padding: 20px 0;
        border-radius: 8px;
    }

    .user-cards-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px; /* Adjust the gap between cards */
        justify-content: space-around; /* Distribute space between cards */
        padding: 20px;
        background-color: #E6E6FA; /* Light purple background for lecture section */
        border-radius: 8px;
    }

    .user-card {
        flex: 1 1 calc(45% - 20px); /* Adjust card width */
        max-width: calc(45% - 20px); /* Ensure max width for each card */
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #fff;
        overflow: hidden; /* Ensure contents don't overflow */
        display: flex; /* Display children (image and content) in a row */
        flex-direction: column; /* Align content vertically */
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .user-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        .user-card img {
            width: 100%;
            height: auto;
            border-radius: 8px 8px 0 0; /* Rounded corners for the top */
            transition: opacity 0.3s ease;
        }

        .user-card:hover img {
            opacity: 0.9;
        }

    .user-card-content {
        padding: 16px;
        text-align: left;
    }

        .user-card-content h3 {
            margin: 0 0 10px;
            color: #2c3e50;
        }

        .user-card-content p {
            margin: 5px 0;
            color: #555;
        }

    .user-card-links {
        padding: 16px;
        border-top: 1px solid #ddd;
        background-color: #f9f9f9;
    }

        .user-card-links p {
            margin: 8px 0;
            color: #555;
        }

        .user-card-links a {
            color: #007bff;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .user-card-links a:hover {
                color: #0056b3;
            }
</style>

<h1>@ViewData["Title"]</h1>

<div class="user-cards-container">
    @if (Model.Users == null)
    {
        <p>Loading...</p>
    }
    else
    {
        @foreach (var user in Model.Users)
        {
            @await Html.PartialAsync("_UserCard", user)
        }
    }
</div>
